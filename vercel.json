{
  "version": 2,
  "buildCommand": "npm run build",
  "outputDirectory": "client/dist",
  "functions": {
    "api/index.js": {
      "includeFiles": "{server,widget}/**"
    }
  },
  "rewrites": [
    { "source": "/api/(.*)", "destination": "/api/index.js" },
    { "source": "/widget/(.*)", "destination": "/api/index.js" },
    { "source": "/(.*)", "destination": "/" }
  ]
}
